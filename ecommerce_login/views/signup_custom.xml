<odoo>
    <template id="signup_custom" inherit_id="auth_signup.signup">
        <xpath expr="//div[hasclass('text-center')]" position="replace">

            <div class="text-center oe_login_buttons d-grid pt-3">
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary">Sign up</button>
                    </div>
                    <div class="col-md-6">
                        <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-secondary" role="button">Log in
                        </a>
                    </div>
                </div>
                <div class="o_login_auth"></div>
            </div>

        </xpath>

    </template>
</odoo>