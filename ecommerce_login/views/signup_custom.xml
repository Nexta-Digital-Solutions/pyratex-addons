<odoo>
    <template id="signup_custom" inherit_id="auth_signup.signup">
        <xpath expr="//t/t/form" position="replace">
            <form class="oe_signup_form" role="form" method="post" t-if="not message">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                <t t-call="auth_signup.fields">
                    <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                </t>

                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>
                <input type="hidden" name="redirect" t-att-value="redirect"/>
                <input type="hidden" name="token" t-att-value="token"/>
                <div class="text-center oe_login_buttons d-grid pt-3">
                    <div class="d-flex justify-content-center ">
                        <button type="submit" class="button m-1">Sign up</button>
                        <button type="button" class="button secondary m-1"
                                onclick="window.location.href='/web/login?{{ keep_query() }}'">Log in
                        </button>

                        <button type="button" class="button secondary m-1"
                                id="prueba_button" name="action_redirect_to_template">Prueba
                        </button>
                    </div>
                    <div class="o_login_auth"/>
                </div>
            </form>
        </xpath>
    </template>
</odoo>