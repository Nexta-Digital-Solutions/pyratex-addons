<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_usage_tree" model="ir.ui.view">
            <field name="name">usage.tree</field>
            <field name="model">product.product.usage</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="image"/>
                </tree>
            </field>
        </record>

        <record id="action_usage_tree" model="ir.actions.act_window">
            <field name="name">Usage</field>
            <field name="res_model">product.product.usage</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_properties_tree"/>
        </record>
    </data>
</odoo>