<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_fiberfamily_tree" model="ir.ui.view">
            <field name="name">fiberfamily.tree</field>
            <field name="model">fiber.family</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_fiberfamily_tree" model="ir.actions.act_window">
            <field name="name">Fiber Families</field>
            <field name="res_model">fiber.family</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_fiberfamily_tree"/>
        </record>
    </data>
</odoo>
