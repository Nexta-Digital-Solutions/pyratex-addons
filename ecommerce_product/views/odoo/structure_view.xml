<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_structure_tree" model="ir.ui.view">
            <field name="name">structure.tree</field>
            <field name="model">structure</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_structure_tree" model="ir.actions.act_window">
            <field name="name">Structure</field>
            <field name="res_model">structure</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_structure_tree"/>
        </record>
    </data>
</odoo>
