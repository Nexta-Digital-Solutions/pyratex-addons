<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_composition_tree" model="ir.ui.view">
            <field name="name">composition.tree</field>
            <field name="model">composition</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_composition_tree" model="ir.actions.act_window">
            <field name="name">Composition</field>
            <field name="res_model">composition</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_composition_tree"/>
        </record>
    </data>
</odoo>