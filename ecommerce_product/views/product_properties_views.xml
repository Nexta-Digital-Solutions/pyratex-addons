<!--                       name="product_category_id" t-att-value="product.public_categ_ids.ids[0]"/>-->
<!--                <input t-if="product.product_tag_ids.ids" type="hidden" class="product_tag_id" name="product_tag_id"-->
<!--                       t-att-value="product.product_tag_ids.ids[0]"/>-->
<!--                <t t-if="combination" t-call="sale.variants">-->
<!--                    <t t-set="ul_class" t-valuef="flex-column"/>-->
<!--                    <t t-set="parent_combination" t-value="None"/>-->
<!--                </t>-->
<!--                <t t-else="">-->
<!--                    <ul class="d-none js_add_cart_variants mb-0"-->
<!--                        t-att-data-attribute_exclusions="{'exclusions: []'}"/>-->
<!--                </t>-->
<!--            </t>-->
<!--        </xpath>-->

        <xpath expr="//p[hasclass('text-muted')]" position="after">
            <div style="display: flex; flex-direction: row; flex-wrap: wrap;"
                 t-if="not user_id.partner_id.name == 'Public user'">
                <div style="width: 25%;">
                    <ul style="list-style: none;">
                        <li>
                            <strong>Weight</strong>
                        </li>
                        <p t-field="product_variant.weight"/>
                    </ul>
                    <ul style="list-style: none;">
                        <li>
                            <strong>Width</strong>
                        </li>
                        <p t-field="product_variant.volume"/>
                    </ul>
                    <ul style="list-style: none;">
                        <li>
                            <strong>Structure</strong>
                        </li>
<!--                        <t t-foreach="product_variant.attributes" t-as="attribute">-->
<!--                            <p t-field="attribute.value_ids.name"/>-->
<!--                        </t>-->

                    </ul>
                    <ul style="list-style: none;">
                        <li>
                            <strong>Composition</strong>
                        </li>
                        <p t-field="product_variant.composition_id"/>
                    </ul>
                </div>
                <div style="width: 75%;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Properties</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
<!--                                <td>Mark</td>-->
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end aign-items-start">
                        <img t-if="not user_id.partner_id.name == 'Public user'"
                             src='/ecommerce_product/static/src/img/certified.png' style="width: 100px; height:150px;"/>
                    </div>
                </div>
            </div>
            <div t-else="">
                <p>For more information, <a t-attf-href="/web/login">Sign in</a>.
                </p>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <img t-if="not user_id.partner_id.name == 'Public user'"
                         src='/ecommerce_product/static/src/img/lavado.png' style="width: 65%; height: 45%;"/>
                    <h5 t-if="not user_id.partner_id.name == 'Public user'" class="text-primary">Made in Portugal</h5>
                </div>
                <div class="col-md-6">
                    <p></p>
                    <a href="#" class="btn btn-primary btn-sm">Add to Swatch Pack</a>
                </div>
            </div>
        </xpath>

        <!--No muestra el precio del producto-->
        <xpath expr="//form/div[hasclass('js_product')]/div" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>

        <!--No muestra la categoría, ni atributos-->
        <xpath expr="//form/div/t[@t-placeholder='select']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>

        <!--No muestra el div del botón-->
        <xpath expr="//div[@id='o_wsale_cta_wrapper']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>

        <xpath expr="//div[@id='product_attributes_simple']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>

        <!--No muestra la página de abajo-->
        <xpath expr="//div[@itemprop='description']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>
        <xpath expr="//div[hasclass('oe_structure')]" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>


        <xpath expr="//div[@id='o_product_terms_and_share']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>
    </template>
</odoo>