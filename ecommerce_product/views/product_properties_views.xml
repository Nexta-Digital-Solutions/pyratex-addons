        <xpath expr="//p[hasclass('text-muted')]" position="after">
            <div style="display: flex; flex-direction: row; flex-wrap: wrap;"
                 t-if="not user_id.partner_id.name == 'Public user'">
                <div style="width: 25%;">
                    <ul style="list-style: none;">
                        <li>
                            <strong>Weight</strong>
                        </li>
<!--                        <p t-field="product_variant.weight"/>-->
                    </ul>
                    <ul style="list-style: none;">
                        <li>
                            <strong>Width</strong>
                        </li>
<!--                        <p t-field="product_variant.volume"/>-->
                    </ul>
                    <ul style="list-style: none;">
                        <li>
                            <strong>Structure</strong>
                        </li>
                        <t t-foreach="product.attribute_line_ids" t-as="attribute">
                            <t t-if="attribute.display_name == 'Structure'">
                                <t t-foreach="attribute.value_ids" t-as="value">
                                    <p t-field="value.name"/>
                                </t>
                            </t>
                        </t>
                    </ul>
                    <ul style="list-style: none;">
<!--                        <li>-->
<!--                            <strong>Composition</strong>-->
<!--                        </li>-->
<!--                        <p t-field="product_variant.composition_id"/>-->
                    </ul>
                </div>
                <div style="width: 75%;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Properties</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="d-flex">
                                    <t t-foreach="product.attribute_line_ids" t-as="attribute">
                                        <t t-if="attribute.display_name == 'Properties'">
                                            <t t-foreach="attribute.value_ids" t-as="value">
                                                <img t-if="value.icon_id" class="p-1"
                                                     t-att-src="image_data_uri(value.icon_id)"
                                                     style="width: 5%; height: 3%;"/>
                                                <p t-field="value.name" class="p-1"/>
                                            </t>
                                        </t>
                                    </t>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end aign-items-start">
                        <t t-if="not user_id.partner_id.name == 'Public user'" t-foreach="product.attribute_line_ids"
                           t-as="attribute">
                            <t t-if="attribute.display_name == 'Certifications'">
                                <t t-foreach="attribute.value_ids" t-as="value">
                                    <img t-if="value.icon_id" class="p-1" t-att-src="image_data_uri(value.icon_id)"
                                         style="width: 10%; height: 5%;"/>
                                </t>
                            </t>
                        </t>
                    </div>
                </div>
            </div>
            <div t-else="">
                <p>For more information, <a t-attf-href="/web/login">Sign in</a>.
                </p>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <t t-if="not user_id.partner_id.name == 'Public user'" t-foreach="product.attribute_line_ids"
                       t-as="attribute">
                        <t t-if="attribute.display_name == 'Care Instructions'">
                            <t t-foreach="attribute.value_ids" t-as="value">
                                <img t-if="value.icon_id" class="p-1" t-att-src="image_data_uri(value.icon_id)"/>
                            </t>
                        </t>
                    </t>
                    <h5 t-if="not user_id.partner_id.name == 'Public user' and product.country_id" class="text-primary">
                        Made in
                        <span t-field="product.country_id"/>
                    </h5>

                </div>
                <div class="col-md-6">
                    <p></p>
                    <a href="#" class="btn btn-primary btn-sm">Add to Swatch Pack</a>
                </div>
            </div>
        </xpath>

        <!--No muestra el precio del producto-->
        <xpath expr="//form/div[hasclass('js_product')]/div" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>

        <!--No muestra la categoría, ni atributos-->
        <xpath expr="//form/div/t[@t-placeholder='select']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>

        <!--No muestra el div del botón-->
        <xpath expr="//div[@id='o_wsale_cta_wrapper']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>

        <xpath expr="//div[@id='product_attributes_simple']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>

        <!--No muestra la página de abajo-->
        <xpath expr="//div[@itemprop='description']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>
        <xpath expr="//div[hasclass('oe_structure')]" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>


        <xpath expr="//div[@id='o_product_terms_and_share']" position="attributes">
            <attribute name="t-if">1!=1</attribute>
        </xpath>
    </template>
</odoo>