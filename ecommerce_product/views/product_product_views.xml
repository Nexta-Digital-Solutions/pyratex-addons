<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_ecommerce_custom" model="ir.ui.view">
        <field name="name">product.ecommerce.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='inventory']" position="after">
                <page name="ecommerce" string="Ecommerce">
                    <group name="fields_ecommerce" string="Product Composition">
                            <field name="composition_id" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>